#include <stdio.h>

int main(){
            printf("Задача 1. Дан номер дня – целое число от 1 до 31 и месяца — целое число в диапазоне 1–12 (1 — январь, 2 — февраль и т. д.). Вывести дату в виде текста (например, «пятое января»).\n");
                int a, b; 
printf("Пожалуйста, введите номер дня ----- "); 
scanf("%d",&a);
printf("Введите номер месяца ----- "); 
scanf("%d",&b);
if (((a>31)&&(b=1))||((a>28)&&(b=2))||((a>31)&&(b=3))||((a>30)&&(b=4))||((a>31)&&(b=5))||((a>30)&&(b=6))||((a>31)&&(b=7))||((a>31)&&(b=8))||((a>30)&&(b=9))||((a>31)&&(b=10))||((a>30)&&(b=11))|| ((a>31)&&(b=12)))
printf("Такого числа в календаре нет.."); 
else
{
                switch (a) {
   case 1:
       printf("Первое ") ;
