#include <stdio.h>
int main()
{
   float x, y;
   printf("x:");
   scanf ("%f", &x);
   printf("y:");
   scanf ("%f", &y);
 
   if ((x>0) & (y>0)) printf("Четверть: 1");
   if ((x<0) & (y>0)) printf("Четверть: 2");
   if ((x<0) & (y<0)) printf("Четверть: 3");
   if ((x>0) & (y<0)) printf("Четверть: 4");
}
