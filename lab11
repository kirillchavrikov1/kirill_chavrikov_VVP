#include <stdio.h>
 int main()
{
   float a, b;
   printf("A:");
   scanf ("%f", &a);
   printf("B:");
   scanf ("%f", &b);
if (a!=b)
  {
   if (a>b)
    {
     b=a;
    }
   else 
    {
     if (a<b)
       {
        a=b;
       }
    }
  }
else
{
        a=0;
        b=0;
}
   printf("a: %f\n b: %f\n",a, b);  
}
