#include <stdio.h> 
int main()
{
   float a1, a2, a3;
   printf("1 число:");
   scanf ("%f", &a1);
   printf("2 число:");
   scanf ("%f", &a2);
   printf("3 число:");
   scanf ("%f", &a3);
 
    if ((a1>=a2) & (a1>=a3))
       {
         if (a2>=a3)
            {
            printf("%f\n",a1+a2);
            } 
         else 
            printf("%f\n",a1+a3);
            } 
       else 
          if ((a2>=a1) & (a2>=a3))
             if (a1>=a3)  
                {
                  printf("%f\n",a1+a2);
                } 
                else 
                printf("%f\n",a2+a3);
            else
               if (a1>=a2)
               {
                 printf("%f\n",a1+a3);
               } 
    else 
    printf("%f\n",a2+a3);
   }
