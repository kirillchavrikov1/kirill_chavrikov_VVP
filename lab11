#include <stdio.h>
#include <stdlib.h>
int main()
{
   float a, b, c;
   printf("Введите A:");
   scanf ("%f", &a);
   printf("Введите B:");
   scanf ("%f", &b);
   printf("Введите C:");
   scanf ("%f", &c);
     if (abs(a-b)<abs(a-c))  
      printf("B: %f\n",b);
     else 
      printf("C:  %f\n",c);
}

