4.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float x1; 
   float x2; 
   float y1; 
   float y2; 
   float a; 
   float b; 
   float s; 
   float p; 
    printf("Введите Х1: "); 
    scanf("%f", &x1);
    printf("Введите У1: "); 
    scanf("%f", &y1);
    printf("Введите Х2: "); 
    scanf("%f", &x2);
    printf("Введите У2: "); 
    scanf("%f", &y2);
       a=abs(x2-x1);
       b=abs(y2-y1);
       p=(a+b)*2;
       s=a*b;
   printf(" Периметр равен: ");
   printf("%f",p); 
   printf(" Площадь равна: ");
   printf("%f",s); 
}
