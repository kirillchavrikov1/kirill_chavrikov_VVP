2.
#include <stdio.h> 
#include <cmath> 
int main()
{
   int A; 
   int B; 
   int C; 
   int AC; 
   int BC;
   int S;
    printf("Введите A: "); 
    scanf("%d", &A);
    printf("Введите B: "); 
    scanf("%d", &B);
    printf("Введите C: "); 
    scanf("%d", &C);
    
    AC=abs(A-C);
    BC=abs(B-C);
    S=AC+BC;
      printf("  AC равно: ");
   printf("%d",AC); 
      printf("  BC равно: ");
   printf("%d",BC); 
      printf("  Summa равнa: ");
   printf("%d",S); 
}
