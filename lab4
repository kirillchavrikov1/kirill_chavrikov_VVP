#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main(){
    float a = 0; 
    float b = 0; 
    float C = 0; 
     
    
    printf("Введите число: ");
    scanf("%f", &a);
    
    printf("Введите число: ");
    scanf("%f", &b);
    
    C=(a+b)/2;
  
  printf("CР: ");
  printf("%f",C);
  
}
-----------------------------------------------------------------------------------------------


#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main(){
    float a = 0; 
    float b = 0; 
    float S = 0; 
    float R = 0;
    float P = 0;
    float C = 0;
    
    printf("Введите число: ");
    scanf("%f", &a);
    
    printf("Введите число: ");
    scanf("%f", &b);
    
  S=a*a+b*b;
  R=a*a-b*b;
  P=a*a*b*b;
  C=(a*a)/(b*b);
  
  printf("   Сумма: ");
  printf("%f",S);
  
  printf("   Разность: ");
  printf("%f",R);
  
  printf("   Произведение: ");
  printf("%f",P);
  
  printf("   Частное: ");
  printf("%f",C);

  
}

-----------------------------------------------------------------------------------------------


#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main(){
    float a = 0; 
    float b = 0; 
    float S = 0; 
    float R = 0;
    float P = 0;
    float C = 0;
    
    printf("Введите число: ");
    scanf("%f", &a);
    
    printf("Введите число: ");
    scanf("%f", &b);
    
  S=abs(a)+abs(b);
  R=abs(a)-abs(b);
  P=abs(a)*abs(b);
  C=abs(a)/abs(b);
  
  printf("   Сумма: ");
  printf("%f",S);
  
  printf("   Разность: ");
  printf("%f",R);
  
  printf("   Произведение: ");
  printf("%f",P);
  
  printf("   Частное: ");
  printf("%f",C);

  
}
