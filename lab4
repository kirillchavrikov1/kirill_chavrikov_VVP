#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main(){
    int a = 5; 
    int b = 5; 
    int s = 5; 
    int p = 5; 
    
    printf("Введите длинну: ");
    scanf("%d", &a);
    printf("Введите ширину: ");
    scanf("%d", &b);
  s=a*b;
  p=(a+b)*2;
  
  printf("Площадь равна: ");
  printf("%d",s);
  
  printf("   Периметр равен:  ");
  printf("%d",p);
  
}


