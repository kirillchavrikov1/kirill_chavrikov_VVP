#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main(){
    float l = 0; 
    float d = 0; 
     
    
    printf("Введите диаметр: ");
    scanf("%f", &d);
    
    l=3.14*d;
  
  printf("Длинна окружности равна: ");
  printf("%f",l);
  
}
