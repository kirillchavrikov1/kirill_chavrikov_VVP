#include <stdio.h>
 
int main()
{
printf("3. Даны целые числа N (> 2), A и B. Сформировать и вывести целочисленный массив размера N, первый элемент которого равен A, второй равен B, а каждый последующий элемент равен сумме всех предыдущих\n");
    int a[100], n, i, k;
    printf("Введите число элементов N: ");
    scanf("%i",&n);
    printf("Введите число A: ");
    scanf("%i",&a[0]);
    printf("Введите число B: ");
    scanf("%i",&a[1]);
    for (i=2; i<n; ++i)
      {
        a[i]=0;
           for (k=0; k<i; ++k) 
             a[i] += a[k];
      }
    
    for (i=0; i<n; ++i) 
      printf("Элемент %i: %i\n",i,a[i]);
}
