#include <stdio.h>
 
int main()
{
printf("4. Дан массив A размера N. Вывести его элементы в следующем порядке: A1, AN , A2, AN−1, A3, AN−2, \n");
    int a[100], n, i;
    printf("Введите кол-во единиц массива N: ");
    scanf("%i",&n);
 
    for (i=0; i<n; ++i)
    {
        printf("Введите элемент массива A[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    for (i=0; i<n/2; ++i)
    {
            printf("%i\n",a[i]);
            printf("%i\n",a[n-i-1]);
    }
    
    if (n%2 != 0 ) printf("%i\n",a[(n/2)]);
}
======================================================

#include <stdio.h>
 
int main()
{
printf("5. Дан массив A размера N. Вывести вначале его элементы с нечетными номерами в порядке возрастания номеров, а затем — элементы с четными номерами в порядке убывания номеров. \n");
    int a[100], n, i;
 
    printf("Введите N: ");
    scanf("%i",&n);
 
    for (i=0; i<n; ++i)
    {
        printf("Введите элемент массива a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
    printf("Нечётные номера:\n ");
    for (i=0; i<n; i+=2)             
    printf("%i\n",a[i]);  
    
    printf("Чётные номера:\n ");
            for (i=n-(n%2)-1; i>=1; i-=2)
               printf("%i\n",a[i]);
}
