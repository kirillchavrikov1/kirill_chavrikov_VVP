#include <stdio.h>
int main()
{
printf("Дано целое число N (> 0). Сформировать и вывести целочисленный массив размера N, содержащий N первых положительных нечетных чисел: 1, 3, 5, . . . . \n");
    int a[100], n, i=1,j=1;
    printf("Введите число N: ");
    scanf("%i",&n);
    for (i=0; i<n; ++i, j+=2) 
        a[i]=j;
    for (i=0; i<n; ++i) 
        printf("Элемент массива №%i: нечётное число %i\n",i,a[i]);
}
