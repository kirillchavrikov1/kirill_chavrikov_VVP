#include <stdio.h>
int main()
{
printf("2. Дано целое число N (> 1), а также первый член A и знаменатель D геометрической прогрессии. Сформировать и вывести массив размера N, содержащий N первых членов данной прогрессии: A, A·D, A·D2 , A·D3 , . . . \n");
    int a[100], d, n, i, k=1;
    printf("Введите число N: ");
    scanf("%i",&n);
    printf("Введите первый член A: ");
    scanf("%i",&a[0]);
    printf("Введите знаменатель D: ");
    scanf("%i",&d);
    
    for (i=1; i<n; ++i)
      {
        k*=d;
        a[i]=a[0]*k;
      }
 
    for (i=0; i<n; ++i) 
       printf("%i член прогрессии: %i\n",i , a[i]);
}
