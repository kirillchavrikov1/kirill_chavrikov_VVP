#include <stdio.h>
int main()
{
printf("Дан массив размера N. Вставить элемент с нулевым значением перед минимальным и после максимального элемента массива. \n");
    int a[1000], min, max, n, i;
    printf("Введите кол-во элементов массива N: ");
    scanf("%i",&n);
      for (i=0; i<n; ++i)
        {
         printf("Введите элемент массива А [%i] : ",i+1);
         scanf("%i",&a[i]);
        }
           for (i=0; i<n; ++i)
            {
              if (a[min]>a[i]) 
                {
                 min=i;
                }
                  if  (a[max]<a[i])
                    {
                     max=i;
                    }
            }
        if (max>min) 
            max++;
        n++;
              for (i=n-1; i>=min; --i) 
                 a[i]=a[i-1];
            a[min]=0;
            n++;
      for (i=n-1; i>max+1; --i) 
           a[i]=a[i-1];
      a[max+1]=0;
for (i=0; i<n; ++i) 
printf("Элемент массива A[%d]: %i\n",i+1,a[i]);
}
