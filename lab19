#include <stdio.h>
int main()
{
printf("Дан массив размера N. Перед каждым положительным элементом массива вставить элемент с нулевым значением. \n");
    int a[1000], n, i, j;
    printf("Введите кол-во элементов массива  N: ");
    scanf("%i",&n);
    for (i=0; i<n; ++i)
       {
        printf("Введите элемент массива А [%i] : ",i+1);
        scanf("%i",&a[i]);
       }
          for (i=n-1; i>=0; --i)
             {
              if (a[i]>0)
                {
                 ++n;
                   for(j=n-1; j>i; --j) 
                     a[j]=a[j-1];
            a[i]=0;
        }
    }
    printf("Внимание! В данной программе 0 не является ни положительным, ни отрицательным числом.\n");
    for (i=0; i<n;++i) 
    printf("Элемент массива A[%d]: %i\n",i+1,a[i]);
}

