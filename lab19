#include <stdio.h>
int main()
{
printf("Дан целочисленный массив размера N. Удалить из массива все элементы, встречающиеся ровно два раза, и вывести размер полученного массива и его содержимое. \n");
    int a[1000], n, i, j, c, E, x;

    printf("Введите кол-во элементов массива  N: ");
    scanf("%i",&n);
      for (i=0; i<n; ++i)
         {
          printf("Введите элемент массива А [%i] : ",i+1);
          scanf("%i",&a[i]);
         }
             for (i=0; i<n;i++)
               {
                x=0;
                  for (j=0; j<n; ++j) 
                     if (a[i]==a[j]) 
                       ++x;
                         if (x==2)
                           {
                            E=i-1;
                            c=a[i];
                              for (j=i;j<n;++j)
                                  if (a[j]!=c)  
                                    {
                                      ++E;
                                      a[E]=a[j];
                                    }
                            n=E+1;
                            --i;
                            }
                }
        printf("Размер отсортированного массива = %i\n",n);
    for (i=0; i<n; ++i) 
    printf("Элемент массива [%d]:%i\n",i+1,a[i]);
}
