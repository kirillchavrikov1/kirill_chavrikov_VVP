1.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float x, A, B; 
 
    printf("Введите A: "); 
    scanf("%f", &A);
    printf("Введите B: "); 
    scanf("%f", &B);
    x=A;
    A=B;
    B=x;
      printf("  A равно: ");
   printf("%f",A); 
      printf("  B равно: ");
   printf("%f",B); 
}
====================================================

2.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float x, y, A, B, C; 
 
    printf("Введите A: "); 
    scanf("%f", &A);
    printf("Введите B: "); 
    scanf("%f", &B);
    printf("Введите C: "); 
    scanf("%f", &C);
    x=A;
    y=B;
    B=A;
    A=C;
    C=y;
      printf("  A равно: ");
   printf("%f",A); 
      printf("  B равно: ");
   printf("%f",B); 
      printf("  C равно: ");
   printf("%f",C); 
}
====================================================

