4.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float x, y; 
 
    printf("Введите x: "); 
    scanf("%f", &x);
   y=3*pow(x,6) - 6*pow(x,2) - 7;
      printf("  Y равно: ");
   printf("%f",y); 
}
====================================================

5.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float x, y; 
 
    printf("Введите x: "); 
    scanf("%f", &x);
   y=4*pow((x-3),6) - 7*pow((x-3),3) + 2;
      printf("  Y равно: ");
   printf("%f",y); 
}
====================================================

6.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float A, x; 
 
    printf("Введите A: "); 
    scanf("%f", &A);
   x=A*A;
   x=x*x;
   A=x*x;
      printf("  A^8 равно: ");
   printf("%f",A); 
}
====================================================
7.
#include <stdio.h> 
#include <cmath> 
int main()
{
   float A, y, x, R; 
 
    printf("Введите A: "); 
    scanf("%f", &A);
   y=pow(A,6);
   x=pow(A,6);
   R=A*A*A*y*x;
      printf("  A^15 равно: ");
   printf("%f",R); 
}
