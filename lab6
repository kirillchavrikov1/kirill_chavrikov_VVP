#include <stdio.h> 
#include <cmath> 
int main()
{
   float x, y, A, B, C; 
 
    printf("Введите A: "); 
    scanf("%f", &A);
    printf("Введите B: "); 
    scanf("%f", &B);
    printf("Введите C: "); 
    scanf("%f", &C);
    x=A;
    y=B;
    B=C;
    A=y;
    C=x;
      printf("  A равно: ");
   printf("%f",A); 
      printf("  B равно: ");
   printf("%f",B); 
      printf("  C равно: ");
   printf("%f",C); 
}
