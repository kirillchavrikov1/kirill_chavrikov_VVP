#include <stdio.h>
int main()
{
printf("Даны целые положительные числа A и B. Найти их наибольший общий делитель (НОД), используя алгоритм Евклида\n");
 int a,b;
    printf("Введите число A:");
    scanf("%d",&a);
    printf("Введите число B:");
    scanf("%d",&b);
        while ((a!=0)&(b!=0))
        {
          if (a>b) 
            a=a%b;
          else 
            b=b%a;
        }
printf("Наибольший общий делитель (НОД): %d\n",a+b);
}
