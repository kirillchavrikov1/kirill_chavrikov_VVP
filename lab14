#include <stdio.h>
int main()
{
printf("Дано целое число N (> 1), являющееся числом Фибоначчи: N = FK. Найти целое число K — порядковый номер числа Фибоначчи N. \n");
  int n, f1=1,f2=1,f=0,k=2;
    printf("Введите целое число N:");
    scanf("%d",&n);
       while (f<n)
         {
          ++k;
          f=f2+f1;
          f2=f1;
          f1=f;
         }
    printf("%d  порядковый номер числа Фибоначчи: %i\n",k,n);
}
