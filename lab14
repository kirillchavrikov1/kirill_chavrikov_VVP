#include <stdio.h>
int main()
{
printf("Даны целые положительные числа A и B (A < B). Вывести все целые числа от A до B включительно; при этом каждое число должно выводиться столько раз, каково его значение (например, число 3 выводится 3 раза). \n");
   int a,b, i, j;
   printf("Введите число A:");
   scanf ("%d", &a);
   printf("Введите число B:");
   scanf ("%d", &b);
   i=a;
   for  (i; i<=b; ++i)
        {
            for (j=1; j<=i; ++j) 
            printf("%d ",i);
        printf("\n");
        }
}
