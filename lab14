#include <stdio.h>
int main()
{
printf("Дано целое число N (> 1). Вывести наименьшее из целых чисел K, для которых сумма 1 + 2 + . . . + K будет больше или равна N, и саму эту сумму. \n");
  int n, k=0, i=0;
    printf("Введите число N:");
    scanf ("%d", &n);
       while (i<n) 
         {
          ++k;
          i+=3;
         }
    printf("Число K равно: %d\nСумма ровна:%d\n",k,i);
}
