#include <stdio.h>
int main()
{
printf("Начальный вклад в банке равен 1000 руб. Через каждый месяц размер вклада увеличивается на P процентов от имеющейся суммы (P — вещественное число, 0 < P < 25). По данному P определить, через сколько месяцев размер вклада превысит 1100 руб., и вывести найденное количество месяцев K (целое число) и итоговый размер вклада S (вещественное число). \n");
float p, s=1000;
int k=1;
  printf("Введите процент, P:");
  scanf ("%f", &p);
    while (s<=1100) 
       {
       ++k;
       s+=s*p/100;
       }
     printf("Кол-во месяцев: %i\nИтоговый размер вклада:%f\n",k,s);
}
