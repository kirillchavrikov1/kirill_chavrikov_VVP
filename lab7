1.
#include <stdio.h> 
#include <cmath> 
int main()
{
float pi, A, R; 
  pi=3.14;
    printf("Введите градусную меру угла(0 <= A < 360):");
    printf(" A = ");
    scanf("%f", &A);
      R = pi * A / 180; 
       printf("Результат:");
       printf(" Угол ");
       printf("%f", A);
       printf("° имеет     ");
      printf("%f", R);
    printf(" радиан.");
}
==============================================================================


2.
#include <stdio.h> 
#include <cmath> 
int main()
{
float a, Pi, b;
  printf("Введите значение угла в радианах: ");
   scanf("%f", &a);
   Pi=3.14;
  if ((0<=a) and (a<2*Pi)) 
    {
         b=(180/Pi)*a;
         printf("Значение угла в градусах: ");
         printf("%f", b);
    }
     else
    {
         printf("Число должно соответствовать условию - 0<a<2*Pi!");
    }
}
============================================================================================


3.
#include <stdio.h> 
#include <cmath> 
int main()
{
float X, A, Y;
  printf("X = ");
  scanf("%f", &X); 
  printf("A = ");
  scanf("%f", &A);
    A = A / X; 
     printf("Стоимость 1 кг конфет: ");
     printf("%f", A);
     printf(" рублей.   ");
     printf("Y = ");
     scanf("%f", &Y);
    A = A * Y; 
     printf("Стоимость ");
     printf("%f", Y);
    printf(" кг конфет: "); 
  printf("%f", A);
printf(" рублей");
}
