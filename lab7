6.
#include <stdio.h> 
#include <cmath> 
int main()
{
  float a1,a2,b1,b2,c1,c2,x,y,o,o1,o2;
    printf("Введите a1: ");
     scanf("%f", &a1);
    printf("Введите b2: ");
     scanf("%f", &b1);
    printf("Введите c1: ");
     scanf("%f", &c1);
    printf("Введите a2: ");
     scanf("%f", &a2);
    printf("Введите b2: ");
     scanf("%f", &b2);
    printf("Введите c2: ");
     scanf("%f", &c2);
     o=a1*b2-b1*a2;
     o1=c1*b2-b1*c2;
     o2=a1*c2-c1*a2;
     x=o1/o;
     y=o2/o;
     printf("Х равен: ");
  printf("%f", x);
  if (y=-0)
  {
     printf("  У равен: 0");
  }
  else
  {
      printf("  У равен: ");
  printf("%f", y);
  }
     
}
