4.
#include <stdio.h> 
#include <cmath> 
int main()
{
  float V1,V2,S,T,K;
    printf("Введите скорость первого автомобился: ");
     scanf("%f", &V1);
    printf("Введите скорость второго автомобиля: ");
     scanf("%f", &V2);
    printf("Введите расстояние между автомобилями : ");
     scanf("%f", &S);
    printf("Введите прошедшее время: ");
     scanf("%f", &T);
       K=S+V1*T+V2*T;
     printf("Между автомабилями: ");
  printf("%f", K);
}

