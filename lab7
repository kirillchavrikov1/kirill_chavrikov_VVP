5.
#include <stdio.h> 
#include <cmath> 
int main()
{
  float A,B,X;
      printf("Введите коэфициент A:");
      scanf("%f", &A);
      printf("Введите коэфициент B: ");
      scanf("%f", &B);
      if (A!=0)
      {
        X=(-1)*B/A ;
        printf("X равен : ");
        printf("%f", X);
      }
      else
      {
        printf("А не должно равняться 0 ");
      }
}

