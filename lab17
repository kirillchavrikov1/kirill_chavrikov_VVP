#include <stdio.h> 
 
int main()
{
printf("Дан массив размера N и целые числа K и L (1 ≤ K ≤ L ≤ N). Найти среднее арифметическое элементов массива с номерами от K до L включительно. \n ");
    int a[100], n, k, l, i, s=0;
    float c;
    printf("Введите коллическто элементов массива N: ");
    scanf("%d",&n);
    
    for (i=0; i<n; ++i)
       {
        printf("Введите элемент массива a[%i] : ",i+1);
        scanf("%i",&a[i]);
       }
       
    printf("Введите начальный номер элемента массива, K: ");
    scanf("%d",&k);
    printf("Введите конечный номер элемента массива, L: ");
    scanf("%d",&l);

    for (i=k-1; i<=l-1; ++i) 
        s+=a[i];
        
        c=(float)s/(float)(l-k+1);
        printf("Среднее арифмитическое элементов равно: %f\n ",c);
}
