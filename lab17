#include <stdio.h>
 
int main()
{
    printf("Дан массив A размера N. Найти минимальный элемент из его элементов с четными номерами: A2, A4, A6, \n ");
    int a[100], n, i, m;
 
    printf("Введите кол-во элементов массива N: ");
    scanf("%d",&n);
 
    for (i=0; i<n; ++i)
    {
        printf("Введите элемент массива a[%d] : ",i+1);
        scanf("%d",&a[i]);
    }
    
    m = a[1];
    
    for (i=1; i<n; i+=2) 
    {
        if (a[i]<m) m=a[i];
    }
    printf("Минимальный элемент с чётным порядковым номером: %d\n",m);

}
