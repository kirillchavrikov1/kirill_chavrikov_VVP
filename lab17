#include <stdio.h>
 
int main()
{
printf("Дан массив размера N. Найти номер его последнего локального максимума (локальный максимум — это элемент, который больше любого из своих соседей). \n ");
    int a[100], n, i, k, c;
 
    printf("Ведите кол-во элементов массива N: ");
    scanf("%i",&n);

    for (i=0; i<n; ++i)
    {
        printf("Введите элемент массива a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
 
    k = a[1];
  for(i = 1; i < n - 1; i++) 
  {
       if(a[i] > a[i - 1] && a[i] > a[i + 1]) 
  {
           k = a[i];
           c=i+1;
  }
  }

  printf("Ответ: %i",c);
}
