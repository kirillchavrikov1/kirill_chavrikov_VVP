#include <stdio.h>
int main()
{
printf("Дан целочисленный массив размера N, не содержащий одинаковых чисел. Проверить, образуют ли его элементы арифметическую прогрессию. Если образуют, то вывести разность прогрессии, если нет — вывести 0. \n ");
    int a[100], n, i, r;
 
    printf("Введите кол-во элементов массива N: ");
    scanf("%i",&n);
 
    
    for (i=0; i<n; ++i)
    {
        printf("a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
        r = a[1]-a[0];
        for (i=1; i<n; ++i) {
        if (r!=a[i]-a[i-1]) {
            r=0;
        }
    }

    if (r==0)
    {
    printf("Введенные данные не являются арифмитической прогрессией. Выводим - 0\n ");
    }
    else
    {
    printf("Разность арифмитической прогрессии равна: %i\n ",r);
    }

}
