#include <stdio.h>
 
int main()
{
printf("5. Дан целочисленный массив размера N, содержащий ровно два одинаковых элемента. Найти номера одинаковых элементов и вывести эти номера в порядке возрастания\n ");
    int a[100], n , i , j;
 
    printf("Введтье кол-во элементов массива N: ");
    scanf("%i",&n);
 
    for (i=0; i<n; ++i){
        printf("Введите элемент  массива a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    for (i=0; i<n-1; ++i)
    {
        for (j=i+1; j<n; ++j)
        {
            if (a[i]==a[j])
            {
                printf("Номера в порядке возрастания: %i и %i\n",i+1,j+1);
            }
        }
    }

}
