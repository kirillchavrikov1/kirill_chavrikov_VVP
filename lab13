#include <stdio.h>
 
int main()
{
printf("Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы.\n");
   int n, i, s=0;
   printf("Введите целое число, где N>0,  N=");
   scanf ("%i", &n);
   for  (i =1; i<=(2*n-1); i+=2)
    {
     s = s + i;
     printf("Сумма на этот момент вычисления равна = %i \n ",s);
  }
   printf("ИТОГ: %i \n ",s);
}

#include <stdio.h>
 
int main()
{
printf("Дано вещественное число A и целое число N (> 0). Используя один цикл, найти сумму 1 + A + A2 + A3 + . . . + AN.\n");
float a, a2=1,k=1;
int n,i;
    printf("Пожалуйста, введите вещественное число A:");
    scanf ("%f", &a);
    printf("Пожалуйста, введите целое число, больше нуля, N:");
    scanf ("%d", &n);
       for  (i =2; i<=n; ++i)
        {
         a2*=a;
         k = k + a2;
        }
   printf("%f \n ",k);
}

================================================
#include <stdio.h>
int main()
{
printf("Дано вещественное число A и целое число N (> 0). Используя один цикл, найти значение выражения 1 − A + A2 − A3 + . . . ± AN . Условный оператор не использовать..\n");
    float a, a2=1,k=1;
    int n, i;
      printf("Введите положительное и вещественное число A:");
      scanf ("%f", &a);
      printf("Введите положительное и целое число N:");
      scanf ("%i", &n);
        for  (i =2; i<=n; ++i)
          {
           a2*=-a;
           k = k + a2;
          }
   printf("Результат: %f \n ",k);
}
