#include <stdio.h>
int main()
{
printf("Дано вещественное число — цена 1 кг конфет. Вывести стоимость 0.1, 0.2, . . . , 1 кг конфет.\n");
   float a,m, k;
   int v;
   printf("Введите цену за один кг конфет: ");
   scanf ("%f", &a);
 
    for  (m = 0.1; m<1.1;  m+=0.1)
    {
        v=a*m;
        k=a*m;
        k=(k-v)*100;
        printf("Конфеты массой %f кг будет стоить %d рублей %d копеек\n", m, v, (int)k);
    }
}
