#include <stdio.h>
int main()
{
float n, a, s;
a=1.1;
s=1.2;
printf("Дано целое число N (> 0). Найти произведение 1.1 · 1.2 · 1.3 · . . . (N сомножителей). \n");

printf("Введите целое число, где N>0,  N="); 
scanf("%f",&n);
                
                    for (int i=2; i<=n; i++)
                    {
                        a=a*s;
                        s=s+0.1;
                        printf("Результат=%f\n",a);
                    }
                    
               
            } 

