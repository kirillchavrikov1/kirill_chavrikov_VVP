#include <stdio.h>
 
int main()
{
printf("Дано вещественное число A и целое число N (> 0). Используя один цикл, найти сумму 1 + A + A2 + A3 + . . . + AN.\n");
float a, a2=1,k=1;
int n,i;
    printf("Пожалуйста, введите вещественное число A:");
    scanf ("%f", &a);
    printf("Пожалуйста, введите целое число, больше нуля, N:");
    scanf ("%d", &n);
       for  (i =2; i<=n; ++i)
        {
         a2*=a;
         k = k + a2;
        }
   printf("%f \n ",k);
}

