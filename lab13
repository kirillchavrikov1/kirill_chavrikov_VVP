#include <stdio.h>
int main()
{
printf("Дано вещественное число A и целое число N (> 0). Используя один цикл, найти значение выражения 1 − A + A2 − A3 + . . . ± AN . Условный оператор не использовать..\n");
    float a, a2=1,k=1;
    int n, i;
      printf("Введите положительное и вещественное число A:");
      scanf ("%f", &a);
      printf("Введите положительное и целое число N:");
      scanf ("%i", &n);
        for  (i =2; i<=n; ++i)
          {
           a2*=-a;
           k = k + a2;
          }
   printf("Результат: %f \n ",k);
}
