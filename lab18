#include <stdio.h>
int E34(float *c1, float *c2)
{
    *c1+=*c2;
    *c2=*c1-*c2;
    *c1=*c1-*c2;
    return 0;
}
int main()
{
printf("Дан массив размера N, все элементы которого, кроме первого, упорядочены по возрастанию. Сделать массив упорядоченным, переместив первый элемент на новую позицию. \n");
    float a[1000]; 
    int i,n;
      printf("Введите кол-во элементов массива N: ");
      scanf("%d",&n);

        for (i=0; i<n; ++i)
             {
               printf("Введите элемент массива А[%d] : ",i+1);
               scanf("%f",&a[i]);
             }
               for (i=1; i<n; ++i)
                 {
                   if (a[i-1]>a[i]) 
                     {
                       E34(&a[i-1], &a[i]);
                     }
                     else break;
                 }
              printf("Отсортированный массив A: \n");
                 for (i=0; i<n; ++i) 
                   printf("Элемент A[%d]: %f\n",i+1,a[i]);
 
}
