#include <stdio.h>
int main()
{
printf("Дан массив A размера N. Сформировать новый массив B того же размера по следующему правилу: элемент BK равен среднему арифметическому элементов массива A с номерами от 1 до K. \n");
    float a[1000],b[1000];
    int n, k, i;
    printf("Введите кол-во элементов массива N: ");
    scanf("%d",&n);
    for (k=0; k<n; ++k){
        printf("Введите элемент массива a[%d] : ",k+1);
        scanf("%f",&a[k]);
    }
    for (k=0; k<n; ++k)
    {
        b[k]=0;
        for (i=0; i<=k; ++i)
        {
            b[k]+=a[i];
        }
    }
    printf("B: \n");
    printf("  B[1]: %f\n",b[0]);
    for (k=1; k<n; ++k) 
    printf("  B[%d]: %f\n",k+1,b[k]/2);
 
} 
}



