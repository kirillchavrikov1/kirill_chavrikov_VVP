
#include <stdio.h>
int main()
{
printf("Даны массивы A и B одинакового размера N. Поменять местами их содержимое и вывести вначале элементы преобразованного массива A, а затем — элементы преобразованного массива B. \n");
    int a[1000],b[1000], n, i;
    printf("Пожалуйста, введите кол-во элеменов в каждом массиве N: ");
    scanf("%d",&n);
    for (i=0; i<n; ++i)
        {
        printf("Введите А[%i] первого массива: ",i+1);
        scanf("%d",&a[i]);
        }
         for (i=0; i<n; ++i)
            {
            printf("Введите В[%i] второго массива: ",i+1);
            scanf("%d",&b[i]);
            }
             for (i=0; i<n;++i)
                {
                a[i]+=b[i];
                b[i]=a[i]-b[i];
                a[i]=a[i]-b[i];
                }
    printf("Отсортированный массив A: \n");
    for (i=0; i<n; ++i) 
    printf("Элемент А[%d]: %d\n",i+1,a[i]);
    printf("Отсортированный массив B: \n");
    for (i=0; i<n; ++i) 
    printf("Элемент В[%d]: %d\n",i+1,b[i]);
}
