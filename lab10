#include <stdio.h>
 
int main()
{
printf("Даны целые числа a, b, c. Проверить истинность высказывания: «Существует треугольник со сторонами a, b, c». \n");
   float a,b,c;
   printf("a:");
   scanf ("%f", &a);
   printf("b:");
   scanf ("%f", &b);
   printf("c:");
   scanf ("%f", &c);
 
    if  ("%d\n",(a<b+c) && (b<a+c) && (c<a+b))
     {
      printf("Да");
     }
    else
     {
      printf("Нет");
     }
}
