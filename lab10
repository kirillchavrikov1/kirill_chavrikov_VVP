#include <stdio.h>
 
int main()
{
printf("Даны три целых числа: A, B, C. Проверить истинность высказывания: «Справедливо двойное неравенство A < B < C». \n");
   int A,B,C;
   printf("A:");
   scanf ("%d", &A);
   printf("B:");
   scanf ("%d", &B);
   printf("C:");
   scanf ("%d", &C);
     if ((A<B) && (B<C))
      {
       printf("Да");
      }
     else
      {
       printf("Нет");
      }
}    

 
