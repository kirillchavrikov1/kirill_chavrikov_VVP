#include <stdio.h>
#include <stdlib.h>
 int main()
{
 printf("Дано трехзначное число. Проверить истинность высказывания: «Цифры данного числа образуют возрастающую или убывающую последовательность». \n");
   int A;
   printf("A:");
   scanf ("%d", &A);
   A=abs(A);
     if  ((((A/100)>(A%100/10)) && ((A%100/10)>(A%10)))||(((A/100)<(A%100/10)) && ((A%100/10)<(A%10))))
      {
       printf("Да");
      }
     else
      {
       printf("Нет");
      }
}
   
