#include <stdio.h>
 #include <stdlib.h>
int main()
{
 printf("Дано целое положительное число. Проверить истинность высказывания: «Данное число является четным двузначным». \n");
   int A;
   printf("A:");
   scanf ("%d", &A);
   A = abs(A);
    if  ((A>9) && (A<100) && (A%2==0))
      {
        printf("Да");
      }
       else
      {
        printf("Нет");
      }
}    
