#include <stdio.h>
#include <stdlib.h> 
int main()
{
printf("Дано четырехзначное число. Проверить истинность высказывания: «Данное число читается одинаково слева направо и справа налево». \n");
   int A;
   printf("A:");
   scanf ("%d", &A);
   A=abs (A);
    if  (A%10==A/1000 && A%100/10 == A%1000/100)
     {
      printf("Да");
     }
    else
     {
      printf("Нет");
     }
}


