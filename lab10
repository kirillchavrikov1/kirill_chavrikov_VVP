#include <stdio.h>
 
int main()
{
printf("Даны целые числа a, b, c, являющиеся сторонами некоторого треугольника. Проверить истинность высказывания: «Треугольник со сторонами a, b, c является прямоугольным». \n");
   float a,b,c;
   printf("a:");
   scanf ("%f", &a);
 
   printf("b:");
   scanf ("%f", &b);
 
   printf("c:");
   scanf ("%f", &c);
 
     if  ((a*a==b*b+c*c) || (b*b==a*a+c*c) || (c*c==a*a+b*b))
    {
     printf("Да");
    }
    else
    {
     printf("Нет");
    }
}

