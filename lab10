#include <stdio.h>
 int main()
{
printf("Даны два целых числа: A, B. Проверить истинность высказывания: «Справедливы неравенства A > 2 и B ≤ 3» \n");
   int A,B;
   printf("A:");
   scanf ("%d", &A);
   printf("B:");
   scanf ("%d", &B);
     if ((A>2) && (B<=3))
        {
          printf("Да");
        }
     else
        {
          printf("Нет");
        }
}    

